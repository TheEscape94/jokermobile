{% extends 'base.html.twig' %}

{% block body %}
    <div class="row content">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="breadcrumbs">
                <p><a href="{{ path('homepage') }}">Početna</a> <i class="icons icon-right-dir"></i> Kontakt</p>
            </div>
        </div>
        <!-- Main Content -->
        <section class="main-content col-lg-12 col-md-12 col-sm-12">
            <div class="row">
                <div class="col-lg-7 col-md-7 col-sm-7">
                    <div class="carousel-heading no-margin">
                        <h4>KONTAKT INFORMACIJE</h4>
                    </div>
                    <div class="page-content contact-info">
                        <iframe width="425" height="350" src="https://maps.google.rs/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=marmora+road&amp;sll=44.210767,20.922416&amp;sspn=4.606139,10.821533&amp;ie=UTF8&amp;hq=&amp;hnear=Marmora+Rd,+London+SE22+0RX,+United+Kingdom&amp;t=m&amp;z=14&amp;ll=51.451955,-0.055755&amp;output=embed"></iframe>
                        <div class="row">

                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="contact-item green">
                                    <i class="icons icon-location-3"></i>
                                    <p>Zmaj Jovina 26,<br>
                                        Novi Sad, Srbija</p>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="contact-item blue">
                                    <i class="icons icon-mail"></i>
                                    <p><a href="#">office@jokermobil.com</a><br>
                                        <a href="#">sales@jokermobil.com</a>
                                    </p>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="contact-item orange">
                                    <i class="icons icon-phone"></i>
                                    <p>+381 64 40-40-950<br>
                                        +381 64 40-40-970
                                    </p>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="contact-item purple">
                                    <i class="icons icon-clock"></i>
                                    <p>Ponedeljak - Petak: 08.00-20.00<br>
                                        Subota: 09.00-17.00<br>
                                        Nedelja: ne radimo</p>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>

                <div class="col-lg-5 col-md-5 col-sm-5">

                    <div class="carousel-heading no-margin">
                        <h4>POŠALJITE NAM PORUKU</h4>
                    </div>

                    <div class="page-content contact-form">

                        {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <input class="btn btn-success pull-right" type="submit" value="Pošalji" />
                        {{ form_end(form) }}

                        <div class="clearfix"></div>

                    </div>

                </div>


            </div>

        </section>
        <!-- /Main Content -->
    </div>
    <!-- /Content -->

{% endblock %}

