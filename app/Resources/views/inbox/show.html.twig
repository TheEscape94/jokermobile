{% extends 'adminbase.html.twig' %}
{% block body %}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2><strong>Poruka <small>No. {{ inbox.id }}</small></strong></h2>
            <ul class="nav navbar-right panel_toolbox">

            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ inbox.id }}</td>
                    </tr>
                    <tr>
                        <th>Ime i prezime</th>
                        <td>{{ inbox.name }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ inbox.email }}</td>
                    </tr>
                    <tr>
                        <th>Naslov</th>
                        <td>{{ inbox.subject }}</td>
                    </tr>
                    <tr>
                        <th>Telefon</th>
                        <td>{{ inbox.phone }}</td>
                    </tr>
                    <tr>
                        <th>Poruka</th>
                        <td>{{ inbox.msg }}</td>
                    </tr>
                    <tr>
                        <th>Stiglo</th>
                        <td>{% if inbox.createdAt %}{{ inbox.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    </tr>
                </tbody>
            </table>
            <div class="form-group">
                <a class="btn btn-success pull-left" href="{{ path('inboxBox') }}">Povratak na listu</a>
                {{ form_start(delete_form) }}
                <input class="btn btn-danger pull-right" type="submit" value="ObriÅ¡i">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

