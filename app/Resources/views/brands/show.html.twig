{% extends 'adminbase.html.twig' %}

{% block body %}
    <h1>Brand</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ brand.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ brand.name }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ brand.logo }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if brand.createdAt %}{{ brand.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_brendovi_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_brendovi_edit', { 'id': brand.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
