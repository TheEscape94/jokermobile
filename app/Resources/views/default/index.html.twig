{% extends 'base.html.twig' %}
{% block head %}
     <meta charset="UTF-8">
     <meta name="description" content="JokerMobil.com, Prodaja, otkup i zamena mobilnih telefona. Najbolje cene, isplata odmah. Zamenite Va stari telefon za novi.">
     <meta name="keywords" content="Prodaja telefona, Otkup telefona, Zamena telefona, Mobilni telefoni, Oprema za mobilne telefone, Staro za novo">
     <meta name="author" content="Milos Aperlic">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}
{% block title %} | Početna {% endblock %}
{% block body %}
    <!-- Content -->
    <div class="row content">

        <!-- Main Content -->
        <section class="main-content col-lg-9 col-md-9 col-sm-9 col-lg-push-3 col-md-push-3 col-sm-push-3">

            <section class="slider">
                <div class="tp-banner-container">
                    <div class="tp-banner" >
                        <ul>
                            <!-- SLIDE  -->
                            <li data-transition="fade" data-slotamount="7" data-masterspeed="1500" >
                                <!-- MAIN IMAGE -->
                                <img src="{{ asset('bundles/app/img/slide1.jpg') }}"  alt="slidebg1"  data-bgfit="cover" data-bgposition="left top" data-bgrepeat="no-repeat">
                                <!-- LAYERS -->
                                <div class="tp-caption skewfromrightshort fadeout"
                                     data-x="40"
                                     data-y="60"
                                     data-speed="500"
                                     data-start="1200"
                                     data-easing="Power4.easeOut"><h2><strong>Zamenite stari telefon za novi</strong></h2>
                                </div>
                                <div class="tp-caption skewfromrightshort fadeout"
                                     data-x="40"
                                     data-y="140"
                                     data-speed="500"
                                     data-start="1200"
                                     data-easing="Power4.easeOut"><h3>Kliknite na ikonicu zamene, popunite formular i pošaljite nam!</h3>
                                </div>
                                <div class="tp-caption skewfromrightshort fadeout"
                                     data-x="40"
                                     data-y="250"
                                     data-speed="500"
                                     data-start="1200"
                                     data-easing="Power4.easeOut"><span>Procena Vašeg telefona <span class="price">BESPLATNO</span></span>
                                </div>
