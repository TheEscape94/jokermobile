                                            {% endif %}
                                            </span>
                                        </span>
                                    </div>

                                    <div class="product-actions">
                                    <span class="add-to-cart">
                                        <span class="action-wrapper">
                                            <i class="icons icon-basket-2"></i>
                                            <a href="/telefon/{{ t.mark }}/{{ t.model }}/{{ t.id }}" style="color: #fff;"><span class="action-name">Dodaj u korpu</span></a>
                                        </span >
                                    </span>
                                    <span class="add-to-favorites">
                                        <span class="action-wrapper">
                                            <i class="icons icon-heart-empty"></i>
                                            <span class="action-name action-wishlist"
                                                  data-type = "0"
                                                  data-id = "{{ t.id }}"
                                                  data-link="/telefon/{{ t.mark }}/{{ t.model }}/{{ t.id }}"
                                                    >Dodaj u želje
                                             </span>
                                        </span>
                                    </span>
                                    <span class="add-to-compare">
                                        <span class="action-wrapper">
                                            <i class="icons icon-docs"></i>
                                            <a href="/zamena/{{ t.id }}"><span class="action-name">Zamena</span></a>
                                        </span>
                                    </span>
                                    </div>
                                </div>
                                <!-- /Carousel Item -->
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <!-- /Carousel -->

            </div>
            <!-- /New Collection -->





            <!-- Random Products -->
            <div class="products-row row">

                <!-- Carousel Heading -->
                <div class="col-lg-12 col-md-12 col-sm-12">

                    <div class="carousel-heading">
                        <h4>Najnovije | Oprema</h4>
                        <div class="carousel-arrows">
                            <i class="icons icon-left-dir"></i>
                            <i class="icons icon-right-dir"></i>
                        </div>
                    </div>

                </div>
                <!-- /Carousel Heading -->

                <!-- Carousel -->
                <div class="carousel owl-carousel-wrap col-lg-12 col-md-12 col-sm-12">

                    <div class="owl-carousel" data-max-items="3">
                        {% for t in equiment %}
                        <!-- Slide -->
                            <div>
                                <!-- Carousel Item -->
                                <div class="product">

                                    <div class="product-image">
                                        {% set images = t.images|split('|') %}
                                        <img src="{{ asset('bundles/app/upload/equiment/') }}{{ images[0] }}" alt="{{ t.mark }} {{ t.name }}">
                                        <a href="/oprema/{{ t.mark }}/{{ t.name }}/{{ t.id }}" class="product-hover">
                                            <i class="icons icon-eye-1"></i> Pregled
                                        </a>
                                    </div>

                                    <div class="product-info">
                                        <h5><a href="/oprema/{{ t.mark }}/{{ t.name }}/{{ t.id }}">{{ t.mark }} {{ t.name }}</a></h5>
                                        <span class="price">
                                            {% if t.priceOff > 0 %}
                                                <del>{{ t.price }} RSD</del>
                                                <span>{{ t.price - (t.priceOff / 100 * t.price) }} RSD</span>
                                            {% else %}
                                                <span>{{ t.price }} RSD</span>
                                            {% endif %}
                                        </span>
                                    </div>

                                    <div class="product-actions">
                                    <span class="add-to-cart">
                                        <span class="action-wrapper">
                                            <i class="icons icon-basket-2"></i>
                                            <a href="/oprema/{{ t.mark }}/{{ t.name }}/{{ t.id }}" style="color: #fff;"><span class="action-name">Dodaj u korpu</span></a>
                                        </span >
                                    </span>
                                        <span class="add-to-favorites">
                                        <span class="action-wrapper">
                                            <i class="icons icon-heart-empty"></i>
                                            <span class="action-name action-wishlist"
                                                  data-type = "1"
                                                  data-id = "{{ t.id }}"
                                                  data-link="/oprema/{{ t.mark }}/{{ t.name }}/{{ t.id }}"
                                                    >Dodaj u želje
                                            </span>
                                        </span>
                                    </span>
                                    </div>
                                </div>
                                <!-- /Carousel Item -->
                            </div>
                        <!-- /Slide -->
                        {% endfor %}
                    </div>
                </div>
                <!-- /Carousel -->

            </div>
            <!-- /Random Products -->




            <!-- Product Brands -->
            <div class="products-row row">

                <!-- Carousel Heading -->
                <div class="col-lg-12 col-md-12 col-sm-12">

                    <div class="carousel-heading">
                        <h4>Brendovi</h4>
                        <div class="carousel-arrows">
                            <i class="icons icon-left-dir"></i>
                            <i class="icons icon-right-dir"></i>
                        </div>
                    </div>

                </div>
                <!-- /Carousel Heading -->

                <!-- Carousel -->
                <div class="carousel owl-carousel-wrap col-lg-12 col-md-12 col-sm-12">
                    <div class="owl-carousel" data-max-items="5">
                        {% for p in brands %}
                            <!-- Slide -->
                            <a href="/kategorija/{{ p.name }}">
                                <div class="subcategory brands" style="height: 120px;">
                                   <img src="{{ asset('bundles/app/upload/brands/') }}{{ p.logo }}" alt="{{ p.name }}">
                                </div>
                            </a>
                            <!-- /Slide -->
                        {% endfor %}
                    </div>

                </div>
                <!-- /Carousel -->

            </div>
            <!-- /Product Brands -->


        </section>
        <!-- /Main Content -->

        {{ render(controller(
            'AppBundle:Parts:sidebar'
        )) }}

    </div>
    <!-- /Content -->

    <!-- News -->
    <div class="products-row row">

        <!-- Carousel Heading -->
        <div class="col-lg-12 col-md-12 col-sm-12">

            <div class="carousel-heading">
                <h4>Novosti</h4>
                <div class="carousel-arrows">
                    <i class="icons icon-left-dir"></i>
                    <i class="icons icon-right-dir"></i>
                </div>
            </div>

        </div>
        <!-- /Carousel Heading -->


        <!-- Carousel -->
        <div class="carousel owl-carousel-wrap col-lg-12 col-md-12 col-sm-12">

            <div class="owl-carousel" data-max-items="2">

                {% for b in blog %}
                    <!-- Slide -->
                    <div>
                        <!-- Carousel Item -->
                        <article class="news">
                            <div class="news-background">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6 news-thumbnail">
                                        <a href="/blog/{{ b.id }}"><img src="{{ asset('bundles/app/upload/blog/') }}{{ b.img1 }}" alt="Blog"></a>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 news-content">
                                        <h5><a href="/blog/{{ b.id }}">{{ b.name }}</a></h5>
                                        <span class="date"><i class="icons icon-clock-1"></i> {% if b.createdAt %}{{ b.createdAt|date('d-m-Y') }}{% endif %}</span>
                                        <p>{{ b.contentTxt|slice(0, 123) }}...</p>
                                    </div>
                                </div>
                            </div>
                        </article>
                        <!-- /Carousel Item -->
                    </div>
                    <!-- /Slide -->
                {% endfor %}
            </div>

        </div>
        <!-- /Carousel -->

    </div>
    <!-- /News -->

    {{ render(controller(
    'AppBundle:Parts:banners'
    )) }}

